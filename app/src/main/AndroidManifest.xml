<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scn.ui">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.TRANSMIT_IR" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:name="com.scn.app.BrickControllerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_brickcontroller"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.scn.ui.creationlist.CreationListActivity"
            android:label="@string/title_activity_creation_list"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.scn.ui.devicelist.DeviceListActivity"
            android:label="@string/title_activity_device_list"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.scn.ui.devicedetails.DeviceDetailsActivity"
            android:label="@string/title_activity_device_details"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.scn.ui.creationdetails.CreationDetailsActivity"
            android:label="@string/title_activity_creation_details"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.scn.ui.controllerprofiledetails.ControllerProfileDetailsActivity"
            android:label="@string/title_activity_controller_profile_details"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.scn.ui.controlleraction.ControllerActionActivity"
            android:label="@string/title_activity_controller_action"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.scn.ui.controller.ControllerActivity"
            android:label="@string/title_activity_controller"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.scn.ui.about.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>